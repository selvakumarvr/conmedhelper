

    
<div class="container body narrow-body"> <!-- Start of Main Container -->

<section id="register">
	<div class="page-header">
		<h3>Editing User</h3>
	</div>

   
<div class="row-fluid">
	<div class="span12">

<div class="form-horizontal">

<%= simple_form_for @user, :html => { :class => 'form-horizontal form-inline' } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_explanation" class ="error">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
