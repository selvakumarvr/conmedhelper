		<%= f.text_field :login , :class => 'span3' %>
			
		</div>
	</div>
                
              
              
            
                
                        <div class="control-group ">
		<label class="control-label required" for="password"> Password </label>
		<div class="controls">
   <%= f.password_field :password,  :class => 'span3'  %>
   </div>
	</div>
                
                
          
                
                
 
                
                

                <div class="control-group">
		<div class="controls">
		  <%= submit_tag nil, :class => "btn btn-primary"  %>
			
		</div>
	</div>

                
                        
</div>
       
        </div>
</div>
    
    
</section>
</div>   
    


<% end %>


